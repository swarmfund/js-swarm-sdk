{
    "name": "swarm-sdk",
    "version": "0.0.0",
    "description": "swarm-sdk is a client-side SDK for Swarm asset tokenization platform.",
    "main": "lib/index.js",
    "scripts": {
        "build": "rimraf lib && babel src -d lib --ignore spec.js,test_helpers",
        "test": "mocha --opts ./mocha.opts 'src/**/*.spec.js'",
        "build:browser": "rimraf dist && webpack",
        "test:browser": "karma start",
        "lint": "eslint ./src --cache --fix",
        "coverage": "nyc mocha --opts ./mocha.opts 'src/**/*.spec.js'",
        "docs": "rimraf docs/pages && jsdoc -c ./.jsdoc.json",
        "docs:md": "rimraf docs/markdown && node scripts/jsdoc_to_markdown.js",
        "prepare": "npm run build & npm run build:browser"
    },
    "husky": {
        "hooks": {
            "pre-commit": "eslint ./src --cache"
        }
    },
    "nyc": {
        "exclude": [
            "src/**/*.spec.js",
            "src/test_helpers",
            "src/base/generated"
        ]
    },
    "browserslist": [
        "> 1%"
    ],
    "keywords": [
        "swarm"
    ],
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/swarmfund/new-js-sdk.git"
    },
    "author": "Distributed Lab <contact@distributedlab.com>",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://gitlab.com/swarmfund/new-js-sdk.git/issues"
    },
    "homepage": "https://gitlab.com/swarmfund/new-js-sdk",
    "devDependencies": {
        "axios-mock-adapter": "^1.15.0",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.4",
        "babel-plugin-transform-builtin-extend": "^1.1.2",
        "babel-preset-env": "^1.6.1",
        "babel-register": "^6.26.0",
        "chai": "^4.1.2",
        "chai-as-promised": "^7.1.1",
        "chai-json-equal": "0.0.1",
        "eslint": "^4.19.1",
        "eslint-config-standard": "^11.0.0",
        "eslint-plugin-chai-friendly": "^0.4.1",
        "eslint-plugin-import": "^2.10.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-promise": "^3.7.0",
        "eslint-plugin-standard": "^3.1.0",
        "husky": "^0.15.0-rc.13",
        "jsdoc": "^3.5.5",
        "jsdoc-to-markdown": "^4.0.1",
        "karma": "^2.0.0",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-mocha": "^1.3.0",
        "karma-phantomjs-launcher": "^1.0.4",
        "karma-sinon": "^1.0.5",
        "karma-webpack": "^3.0.0",
        "minami": "^1.2.3",
        "mocha": "^5.0.5",
        "nyc": "^11.6.0",
        "sinon": "^4.5.0",
        "sinon-chai": "^3.0.0",
        "webpack": "^4.11.0",
        "webpack-cli": "^2.0.14"
    },
    "dependencies": {
        "axios": "^0.16.0",
        "base32.js": "~0.1.0",
        "bignumber.js": "^2.0.7",
        "crc": "^3.3.0",
        "ed25519": "0.0.4",
        "js-xdr": "^1.0.0",
        "lodash": "^4.0.1",
        "sjcl-tokend": "^1.0.6",
        "tweetnacl": "^0.13.0",
        "urijs": "^1.19.1"
    },
    "optionalDependencies": {
        "ed25519": "0.0.4"
    }
}
